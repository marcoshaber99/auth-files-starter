# A secure random string used to encrypt sessions and tokens
BETTER_AUTH_SECRET=your_better_auth_secret

# Server-side URL (used by Better Auth internally)
# In production, this should be your deployment URL (e.g., https://your-app.com)
BETTER_AUTH_URL=http://localhost:3000

# Public URL (used by the client-side auth client)
# In production, this should be your deployment URL (e.g., https://your-app.com)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=your_database_url

# Email Configuration
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM_ADDRESS=auth@yourdomain.com
EMAIL_FROM_NAME="Your App Name"

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret